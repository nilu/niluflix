{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "../../dist/server",
    "rootDir": "../..",
    "noEmit": false,
    "jsx": "preserve",
    "types": ["node"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "strict": false
  },
  "include": [
    "./**/*.ts",
    "./**/*.tsx",
    "../shared/**/*.ts",
    "../shared/**/*.tsx",
    "../shared/**/*.js"
  ],
  "exclude": [
    "**/*.test.ts"
  ]
}
