# NiluFlix Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# EXTERNAL APIs
# =============================================================================

# TMDB API Configuration
# Get your API key from: https://www.themoviedb.org/settings/api
TMDB_API_KEY=your_tmdb_api_key_here

# Supabase Configuration (for web interface)
# Get these from your Supabase project settings > API
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key_here

# OpenSubtitles API (free, no key required)
# Public API available at: https://opensubtitles.com
OPENSUBTITLES_BASE_URL=https://opensubtitles.com/api

# =============================================================================
# DESKTOP APP CONFIGURATION
# =============================================================================

# API Server Configuration
DESKTOP_APP_PORT=3001
DESKTOP_APP_HOST=localhost

# Database Configuration
SQLITE_DB_PATH=./database/niluflix.db

# File System Configuration
MOVIES_DIR=~/Movies/NiluFlix
DOWNLOADS_DIR=~/Movies/NiluFlix/Downloads
METADATA_DIR=~/Movies/NiluFlix/.metadata

# =============================================================================
# TORRENT CLIENT CONFIGURATION
# =============================================================================

# Transmission Configuration
TRANSMISSION_HOST=localhost
TRANSMISSION_PORT=9091
TRANSMISSION_USERNAME=
TRANSMISSION_PASSWORD=

# qBittorrent Configuration (alternative)
QBITTORRENT_HOST=localhost
QBITTORRENT_PORT=8080
QBITTORRENT_USERNAME=admin
QBITTORRENT_PASSWORD=adminadmin

# =============================================================================
# WEB INTERFACE CONFIGURATION
# =============================================================================

# Remote Access Configuration
REMOTE_ACCESS_ENABLED=false
REMOTE_ACCESS_PORT=3002
REMOTE_ACCESS_DOMAIN=your-domain.com

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Environment
NODE_ENV=development

# Logging
LOG_LEVEL=info

# Debug Options
DEBUG_TORRENT_CLIENT=false
DEBUG_API_CALLS=false
DEBUG_DATABASE_QUERIES=false

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# JWT Secret for API authentication
JWT_SECRET=your_jwt_secret_here

# Encryption key for sensitive data
ENCRYPTION_KEY=your_encryption_key_here

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================

# Download Configuration
MAX_CONCURRENT_DOWNLOADS=3
MAX_DOWNLOAD_SPEED=0  # 0 = unlimited
MAX_UPLOAD_SPEED=0     # 0 = unlimited

# Cache Configuration
CACHE_TTL_HOURS=24
CACHE_MAX_SIZE_MB=100

# =============================================================================
# NOTIFICATIONS (Optional)
# =============================================================================

# Push Notifications (for mobile app)
FCM_SERVER_KEY=your_fcm_server_key_here

# Email Notifications (for download completion)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
