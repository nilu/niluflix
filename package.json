{
  "name": "niluflix",
  "version": "1.0.0",
  "description": "A beautiful streaming platform interface that secretly powers your personal media collection through torrenting",
  "main": "src/main/main.js",
  "scripts": {
    "setup": "npm install && npm run db:setup",
    "start": "electron .",
    "dev": "concurrently -n \"API,ELECTRON\" -c \"blue,green\" \"npm run server:dev\" \"npm run electron:dev\"",
    "electron:dev": "electron . --dev",
    "server:dev": "nodemon src/server/index.ts --watch src/server --exec \"ts-node\"",
    "build": "npm run build:renderer && npm run build:server",
    "build:renderer": "npm run build:css && webpack --mode production",
    "build:server": "tsc --project src/server/tsconfig.json",
    "build:css": "npx @tailwindcss/cli@latest -i ./src/renderer/input.css -o ./src/renderer/output.css",
    "build:css:watch": "npx @tailwindcss/cli@latest -i ./src/renderer/input.css -o ./src/renderer/output.css --watch",
    "build:mac": "electron-builder --mac",
    "build:all": "electron-builder --mac --win --linux",
    "dist": "npm run build && electron-builder",
    "db:setup": "node scripts/setup-database.js",
    "db:migrate": "node scripts/migrate-database.js",
    "db:seed": "node scripts/seed-database.js",
    "lint": "eslint src/ --ext .js,.ts,.tsx",
    "lint:fix": "eslint src/ --ext .js,.ts,.tsx --fix",
    "format": "prettier --write src/**/*.{js,ts,tsx,css,html}",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "keywords": [
    "electron",
    "streaming",
    "torrent",
    "netflix",
    "media",
    "entertainment",
    "tailwindcss",
    "react"
  ],
  "author": "NiluFlix Team",
  "license": "MIT",
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@prisma/client": "^5.7.1",
    "@supabase/supabase-js": "^2.38.4",
    "axios": "^1.6.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "prisma": "^5.7.1",
    "sqlite3": "^5.1.6",
    "torrent-search-api": "^2.1.4",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.6",
    "@babel/preset-env": "^7.23.6",
    "@babel/preset-react": "^7.23.3",
    "@babel/preset-typescript": "^7.23.3",
    "@tailwindcss/cli": "^4.1.13",
    "@tanstack/react-query": "^5.14.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "babel-loader": "^9.1.3",
    "concurrently": "^8.2.2",
    "css-loader": "^6.8.1",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "framer-motion": "^10.16.16",
    "html-webpack-plugin": "^5.6.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.1",
    "style-loader": "^3.3.3",
    "tailwindcss": "^4.1.13",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "build": {
    "appId": "com.niluflix.app",
    "productName": "NiluFlix",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "src/**/*",
      "database/**/*",
      "config/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.entertainment",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64",
            "x64"
          ]
        }
      ],
      "icon": "build/icon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "build/icon.png"
    }
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
