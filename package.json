{
  "name": "niluflix-electron",
  "version": "1.0.0",
  "description": "Minimal Electron app with Tailwind CSS v4",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:css": "tailwindcss -i ./src/input.css -o ./src/output.css --watch"
  },
  "keywords": [
    "electron",
    "tailwindcss",
    "app"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "@tailwindcss/cli": "^4.0.0-alpha.25"
  },
  "build": {
    "appId": "com.niluflix.app",
    "productName": "NiluFlix",
    "directories": {
      "output": "dist"
    },
    "mac": {
      "category": "public.app-category.entertainment"
    }
  }
}
